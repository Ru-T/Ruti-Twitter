<% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.follows.find_by_followed_id(@user.id),
                  method: :delete) do |f| %>
      <%= f.submit "Unfollow" %>
    <% end %>
  <% else %>
    <%= form_for(current_user.follows.build) do |f| %>
      <%= hidden_field_tag :followed_id, @user.id %>
      <%= f.submit "Follow" %>
    <% end %>
  <% end %>
<% end %>
